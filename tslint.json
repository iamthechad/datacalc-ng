{
  "extends": ["codelyzer", "tslint:recommended", "tslint-eslint-rules", "tslint-sonarts", "tslint-consistent-codestyle"],
  "rules": {
    "array-type": [
      true,
      "array"
    ],
    "arrow-parens": false,
    "ban-comma-operator": true,
    "component-class-suffix": true,
    "component-selector": [
      false,
      "element",
      "app",
      "kebab-case"
    ],
    "deprecation": {
      "severity": "warn"
    },
    "directive-class-suffix": true,
    "directive-selector": [
      false,
      "attribute",
      "app",
      "camelCase"
    ],
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "indent": false,
    "interface-name": false,
    "jsdoc-format": false,
    "max-line-length": [
      true,
      200
    ],
    "member-access": false,
    "member-ordering": false,
    "no-consecutive-blank-lines": false,
    "no-duplicate-variable": true,
    "no-implicit-dependencies": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-input-rename": true,
    "no-non-null-assertion": true,
    "no-object-literal-type-assertion": true,
    "no-output-rename": true,
    "no-string-literal": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "prefer-object-spread": true,
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": true
      }
    ],
    "trailing-comma": { "severity": "warn" },
    "no-host-metadata-property": true,
    "no-inputs-metadata-property": true,
    "use-lifecycle-interface": true,
    "no-outputs-metadata-property": true,
    "use-pipe-transform-interface": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
    "no-duplicate-string": [true, 10],
    "no-commented-code": { "severity": "warn" },
    "no-ignored-initial-value": { "severity": "warn" },
    "no-ignored-return": { "severity": "warn" },
    "no-self-assignment": { "severity": "warn" },
    "no-useless-cast": { "severity": "warn" },
    "parameters-max-number": [15, { "severity": "warn" }],
    "prefer-immediate-return": { "severity": "warn" },
    "cognitive-complexity": [20, { "severity": "warn" }],
    "no-unnecessary-type-annotation": { "severity":  "warn" }
  }
}
